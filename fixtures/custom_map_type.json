{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/invopop/jsonschema/custom-map-outer",
  "$ref": "#/$defs/CustomMapOuter",
  "$defs": {
    "CustomMapOuter": {
      "properties": {
        "my_map": {
          "$ref": "#/$defs/CustomMapType"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "my_map"
      ]
    },
    "CustomMapType": {
      "items": {
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "key",
          "value"
        ]
      },
      "type": "array"
    }
  }
}